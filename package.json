{
  "name": "react-navx",
  "version": "0.0.5",
  "description": "Navigation and state management in one place for your React Native projects, featuring React Navigation and MobX",
  "main": "build/index.js",
  "types": "build/types/index.d.ts",
  "repository": "https://github.com/infinitered/react-navx",
  "author": "Jamon Holmgren",
  "license": "MIT",
  "files": [
    "README.md",
    "build"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint ./src/**.ts ./src/**.tsx",
    "format": "prettier --write \"{**/*.ts,**/*.js}\" --loglevel error && yarn lint --fix",
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "build": "yarn lint && yarn format && yarn clean-build && yarn compile",
    "ci:test": "yarn test",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.6.1",
    "mobx": "4.13.0",
    "mobx-react": "^6.1.3",
    "mobx-state-tree": "^3.14.1",
    "react-native-gesture-handler": "^1.3.0",
    "react-navigation": "^3.11.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-optional-catch-binding": "^7.2.0",
    "@semantic-release/git": "^7.0.16",
    "@types/jest": "^24.0.17",
    "@types/react-navigation": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-native": "^3.7.0",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.9.0",
    "semantic-release": "^15.13.21",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "standard",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "off"
      ],
      "@typescript-eslint/no-explicit-any": [
        "off"
      ],
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none",
            "requireLast": false
          },
          "singleline": {
            "delimiter": "comma",
            "requireLast": false
          }
        }
      ]
    },
    "settings": {
      "react": {
        "version": "latest"
      }
    },
    "globals": {
      "__DEV__": false,
      "jasmine": false,
      "beforeAll": false,
      "afterAll": false,
      "beforeEach": false,
      "test": false,
      "expect": false,
      "describe": false,
      "jest": false,
      "it": false
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.tsx$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": "package.json",
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
