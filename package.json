{
  "name": "react-navx",
  "version": "0.0.1",
  "description": "Navigation and state management in one place for your React Native projects, featuring React Navigation and MobX",
  "main": "index.js",
  "repository": "https://github.com/infinitered/react-navx",
  "author": "Jamon Holmgren",
  "license": "MIT",
  "scripts": {
    "compile": "tsc -p .",
    "lint": "eslint commands lib test *.js --fix",
    "ci:test": "yarn test",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.6.1",
    "mobx": "4.13.0",
    "mobx-react": "^6.1.3",
    "mobx-state-tree": "^3.14.1",
    "react-navigation": "^3.11.1"
  },
  "devDependencies": {
    "@semantic-release/git": "^7.0.16",
    "@types/react-navigation": "^3.0.8",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-native": "^3.7.0",
    "eslint-plugin-standard": "^4.0.0",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.21",
    "typescript": "^3.5.3"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier"
    ],
    "globals": {
      "__DEV__": false,
      "jasmine": false,
      "beforeAll": false,
      "afterAll": false,
      "beforeEach": false,
      "test": false,
      "expect": false,
      "describe": false,
      "jest": false,
      "it": false
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": "package.json",
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
