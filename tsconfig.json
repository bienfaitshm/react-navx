{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "es2015",
    "lib": ["es6"],
    "outDir": "build",
    "declaration": true,
    "declarationDir": "build/types",
    "pretty": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
